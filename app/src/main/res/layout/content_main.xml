<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:id="@+id/exit"
            android:onClick="exit"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Sound"
            android:id="@+id/ovalBtn"
            android:onClick="check_sound"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="    "
            android:contentDescription="N/A"
            android:id="@+id/Btn1"
            android:background="@drawable/border"/>

        <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="    "
            android:contentDescription="N/A"
        android:id="@+id/Btn2"
            android:background="@drawable/border"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="    "
            android:contentDescription="N/A"
            android:id="@+id/Btn3"
            android:background="@drawable/border"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="    "
            android:contentDescription="N/A"
            android:id="@+id/Btn4"
            android:background="@drawable/border"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_upward_black_24dp"
            android:id="@+id/upBtn"
            android:contentDescription="up"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_downward_black_24dp"
            android:id="@+id/downBtn"
            android:contentDescription="down"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:id="@+id/leftBtn"
            android:contentDescription="left"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_forward_black_24dp"
            android:id="@+id/rightBtn"
            android:contentDescription="right"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_play_arrow_black_24dp"
            android:id="@+id/rectBtn"
            android:onClick="play"
            />

    </LinearLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/myPanelL"
    >


    <com.example.m_alrajab.week10_demo3.MyPanel
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myPanel"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@raw/hockey"
        android:id="@+id/hockey"
        />
    

</RelativeLayout>




</LinearLayout>
